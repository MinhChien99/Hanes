        <%- include ("../partials/navTemplate.ejs"); -%>
            <main class="mdl-layout__content">
                <div class="page-content">
                    <div class="">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="page-title text-center">
                                    <strong class="text-uppercase"> Quản lý máy Realtime</strong>
                                </h4>
                            </div>
                        </div>
                        <div class="bg-white">
                            <div class="d-sm-block">
                                <div class="mdl-tabs__panel is-active">
                                    <div class="d-flex pl-4 pr-4">
                                        <div class="m-auto" style="width: 422px;">
                                            <p class="mb-1"><strong>Chọn line</strong></p>
                                            <select class="form-control w-100" name="" id="txtTime" onchange="changeLine(this.value)">
                                                
                                            </select>
                                        </div>
                                    </div>
                                    <div class="p-4 machine-area" style="padding-top: 0px!important;">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
