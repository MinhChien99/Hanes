    <style>

        .line-box-header{
            padding: 10px 0;
            text-align: center;
        }

        .line-box {
            margin: auto;
            width: 420px;
            display: -webkit-box;
            flex-flow: row wrap;
            align-content: space-between;
            justify-content: space-between;
        }

        .machine {
            width: 103px;
            background-image: url("/Image/sewing-machine1.png");
            background-repeat: no-repeat;
            background-size: 90px;
            background-position: center;
            /* background-color: #512458; */
            height: 86px;
            font-size: 16px;
            font-weight: 900;
            margin: 1px;
            /* border-radius: 5px; */
            box-shadow: black 0 0 2px 0;
            cursor: pointer;
            /* padding: 13px; */
            color: black;
        }

        .machine:hover{
            transform: scale(1.1);
            transition: .3s ease-in-out;
            border: 2px solid rgb(164, 16, 233);
        }

        .mc-pos{

        }

        .mc-tag{
            position: relative;
            text-align: center;
            top: 43px;
        }

        .item:nth-child(4n - 1) {
            background: silver;
        }

        .line-break {
            width: 100%;
        }
    </style>

</head>

<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
        <header class="mdl-layout__header">
