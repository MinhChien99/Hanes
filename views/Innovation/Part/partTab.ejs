<div class="d-flex pl-4 pr-4 mt-3 mb-3">
    <div class="p-0">
        <div class="input-group">
            <button class="btn btn-success" data-target="#modalAddPart" data-toggle="modal"><i class="fa fa-plus"></i></button>
        </div>
    </div>
    <div class="p-0 ml-2">
        <div class="btn-group btn-filter">
            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-download"></span>
            </button>
            <div class="dropdown-menu p-3" style="left: -22px; width: 300px;">
                <form class="form-inline" id="formTRReport">
                    <div class="mt-2">
                        <div class="w-100">
                            <p class="mb-1"><strong>Tiêu chí</strong></p>
                            <select class="form-control w-100" name="" id="txtCriteria">
                                <option value="0">Tất cả</option>
                                <option value="1">Top 10 part dùng nhiều nhất</option>
                                <option value="2">Top 10 part dùng ít nhất</option>
                            </select>
                        </div>
                        <div class="w-100">
                            <p class="mb-1"><strong>Thời gian</strong></p>
                            <select class="form-control w-100" name="" id="txtPartTime" onchange="changeDatePart()">
                               
                            </select>
                        </div>
                        <div id="partPickTime" style="display: none">
                            <div class="d-flex">
                                <div class="">
                                    <p class="mb-1"><strong>Từ ngày</strong></p>
                                    <input type="text" class="form-control w-100 isDate" id="txtPartFrom" />
                                </div>
                                <div class="ml-2">
                                    <p class="mb-1"><strong>Đến ngày</strong></p>
                                    <input type="text" class="form-control w-100 isDate" id="txtPartTo" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="justify-content-between align-items-center mt-3 text-right">
                        <button type="button" class="btn btn-success btn-sm" onclick="downloadPart()">Download</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="pl-2 input-sm-100">
        <div class="input-group">
            <input type="text" class="form-control" id="txtAllPart" placeholder="Tên vật tư">
            <span class="input-group-btn">
                <button class="btn btn-success" type="button" onclick="getAllPart()"><i class="fa fa-search"></i></button>
            </span>
        </div>
    </div>
</div>
<div class="">
    <table class="table table-hover table-bordered table-scrollable mb-0">
        <thead>
            <tr>
                <th width='10%'>#</th>
                <th width='20%'>Mã</th>
                <th width='20%'>Tên</th>
                <th width='20%'>SL</th>
                <th width='20%'>Vị trí</th>
                <th width='10%'></th>
            </tr>
        </thead>
    </table>
    <div class="onscrollbar onscrollbar-machine" style="overflow: auto;">
        <table class="table table-hover table-bordered m-0">
            <tbody id="all-table-body">

            </tbody>
        </table>
    </div>
</div>